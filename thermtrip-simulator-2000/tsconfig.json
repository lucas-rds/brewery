{
  "compilerOptions": {
    "rootDir": ".",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "types": [
      "reflect-metadata"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@domain/*": [
        "core/domain/*"
      ],
      "@enums/*": [
        "core/enums/*"
      ],
      "@factory/*": [
        "src/core/factory/*"
      ],
      "@services/*": [
        "src/core/services/*"
      ],
      "@repositories/*": [
        "src/infra/repository/*"
      ]
    },
    "lib": [
      "es2015"
    ]
  },
  "include": [
    "src/**/*"
  ]
}